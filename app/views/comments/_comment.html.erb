<%= content_tag :ul, class: 'list-group', id: "comment-#{comment.id}" do %>
  <li class="list-group-item">
    <div class="media">
        <%= link_to '#', class: 'pull-left' do %>
          <%= image_tag(comment.user.avatar.small.url) if comment.user.avatar? %>
        <% end %>
        <div class="media-body">
          <small>
            <%= comment.user.name %> commented  ago
            <% if policy(comment).destroy? %>
              | <%= link_to "Delete", comment_url_helper(comment), method: :delete, remote: true %>
            <% end %>
          </small>
          <p><%= comment.body %></p>
        </div>
    </div>
  </li>
<% end %>
